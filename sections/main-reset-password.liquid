{{ 'customer.css' | asset_url | stylesheet_tag }}


{%- style -%}
  #shopify-section-{{ section.id }} .m-customer-reset__wrapper {
    max-width: 100%;
    padding-top: {{ section.settings.padding_top_mobile | times: 0.0625 }}rem;
    padding-bottom: {{ section.settings.padding_bottom_mobile | times: 0.0625 }}rem;
  }
  @media (min-width: 768px){
    #shopify-section-{{ section.id }} .m-customer-reset__wrapper {
      padding-top: {{ section.settings.padding_top_tablet | times: 0.0625 }}rem;
      padding-bottom: {{ section.settings.padding_bottom_tablet | times: 0.0625 }}rem;
    }
  }
  @media (min-width: 1025px){
    #shopify-section-{{ section.id }} .m-customer-reset__wrapper {
      padding-top: {{ section.settings.padding_top_desktop | times: 0.0625 }}rem;
      padding-bottom: {{ section.settings.padding_bottom_desktop | times: 0.0625 }}rem;
    }
  }
{%- endstyle -%}

<div class="customer reset-password section-{{ section.id }}-padding m-customer-reset__wrapper px-0">
  <div class="c-gradient--primary c-gradient--primary--opacity-35 position-absolute inset-0 d-block"></div>
  <div class="container z-1 position-relative">
    <div class="row justify-content-center">
      <div class="col-md-7 col-xl-5">
        <div class="px-3 px-md-0">
          <h1 class="h3 mb-6 mb-md-4 text-center text-md-start">
            {{ 'customer.reset_password.title' | t }}
          </h1>
          <p class="text-primary text-body-primary mb-8 mb-md-11 mt-0 text-center text-md-start">
            {{ 'customer.reset_password.subtext' | t }}
          </p>
          {%- form 'reset_customer_password', class: 'ni-form mt-0' -%}
            {%- if form.errors -%}
              <h2 class="form__message" tabindex="-1" autofocus>
                <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
                <span class="svg-wrapper">
                  {{- 'icon-error.svg' | inline_asset_content -}}
                </span>
                {{ 'templates.contact.form.error_heading' | t }}
              </h2>
              <ul>
                {%- for field in form.errors -%}
                  <li>
                    {%- if field == 'form' -%}
                      {{ form.errors.messages[field] }}
                    {%- else -%}
                      <a href="#{{ field }}">
                        {{ form.errors.translated_fields[field] | capitalize }}
                        {{ form.errors.messages[field] }}
                      </a>
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
            <div class="form-group">
              <label for="password" class="caption mb-1 text-navy">
                {{ 'customer.reset_password.password' | t }}
              </label>
              <input
                type="password"
                name="customer[password]"
                id="password"
                autocomplete="new-password"
                {% if form.errors contains 'password' %}
                  aria-invalid="true"
                  aria-describedby="password-error"
                {% endif %}
                placeholder="{{ 'customer.reset_password.password' | t }}"
              >
          
              {%- if form.errors contains 'password' -%}
                <small id="password-error" class="form__message">
                  <span class="svg-wrapper">
                    {{- 'icon-error.svg' | inline_asset_content -}}
                  </span>
                  {{ form.errors.translated_fields.password | capitalize }}
                  {{ form.errors.messages.password }}
                </small>
              {%- endif -%}
            </div>
            <div class="form-group">
              <label for="password_confirmation" class="caption mb-1 text-navy">
                {{ 'customer.reset_password.password_confirm' | t }}
              </label>
              <input
                type="password"
                name="customer[password_confirmation]"
                id="password_confirmation"
                autocomplete="new-password"
                {% if form.errors contains 'password_confirmation' %}
                  aria-invalid="true"
                  aria-describedby="password_confirmation-error"
                {% endif %}
                placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
              >
          
              {%- if form.errors contains 'password_confirmation' -%}
                <small id="password_confirmation-error" class="form__message">
                  <span class="svg-wrapper">
                    {{- 'icon-error.svg' | inline_asset_content -}}
                  </span>
                  {{ form.errors.translated_fields.password_confirmation | capitalize }}
                  {{ form.errors.messages.password_confirmation }}
                </small>
              {%- endif -%}
            </div>
            <div class="mt-6 mt-md-9 text-start">
              <button class="btn btn-primary m-0">
                {{ 'customer.reset_password.submit' | t }}
              </button>
            </div>
          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</div>

