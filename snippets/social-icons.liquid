{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
    class: 'my-class'
  %}
{% endcomment %}

<ul class="list-unstyled list-social{% if class %} {{ class}}{% endif %} justify-content-start column-gap-6" role="list">
  {%- if settings.social_facebook_link != blank -%}
    <li class="ps-0 mb-0 list-social__item">
      <a {% if settings.social_facebook_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ settings.social_facebook_link }}"{% endif %} target="_blank">
        <span class="svg-wrapper">
          {% render 'social-icon-list', icon: 'facebook' %}
        </span>
        <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
      </a>
    </li>
  {%- endif -%}
